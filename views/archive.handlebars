<div class="archive">
{{#each archive}}
	<h5>{{year}}</h5>
	{{#each articles}}
		<a href="{{path}}">{{title}}</a>
		{{#if date}}
			&ndash; {{formatDate date}}
		{{/if}}
		<br />
	{{/each}}
{{/each}}
</div>

{{#if pagination}}
<div class="pagination">
	{{#if nextPage }}
		<a class="nextPage" href="?page={{nextPage}}">&lsaquo; Older</a>
	{{/if}}
	{{#if previousPage }}
		<a class="previousPage" href="?page={{previousPage}}">Newer &rsaquo;</a>
	{{/if}}
</div>
{{/if}}
